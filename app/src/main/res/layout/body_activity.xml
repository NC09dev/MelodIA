<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5B926"
    tools:context=".MainActivity">

    <!-- Rectángulo con color #FFF78E -->
    <View
        android:id="@+id/rectangulo"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/rounded_rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <!-- Texto dentro del rectángulo -->

    <View
        android:id="@+id/rectangulo2"
        android:layout_width="309dp"
        android:layout_height="42dp"
        android:background="@drawable/rounded_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.662" />

    <EditText
        android:id="@+id/rectangulo4"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:background="@drawable/rounded_rectangle"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:hint="¿Qué quieres escuchar hoy?"
        android:inputType="text"
        android:textColor="#D4812A"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.857" />

    <View
        android:id="@+id/rectangulo_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFF78E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="318dp"
        android:layout_height="348dp"
        android:src="@drawable/referencia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangulo"
        app:layout_constraintVertical_bias="0.086"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvMelodia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#1976D2"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:text="MELODIA"
        android:textColor="#F90370"
        android:textSize="20sp"
        android:fontFamily="@font/bagelfont"
        app:layout_constraintBottom_toBottomOf="@+id/rectangulo"
        app:layout_constraintEnd_toEndOf="@+id/rectangulo"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="@+id/rectangulo"
        app:layout_constraintTop_toTopOf="@+id/rectangulo" />

    <TextView
        android:id="@+id/tvSobreLaApp"
        android:layout_width="142dp"
        android:layout_height="42dp"
        android:background="@drawable/rounded_rectangle"
        android:gravity="center"
        android:text="Sobre la app"
        android:textColor="#D4812A"
        android:textSize="16sp"
        android:fontFamily="@font/baloo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96" />

    <TextView
        android:id="@+id/tvSobreLaApp2"
        android:layout_width="142dp"
        android:layout_height="42dp"
        android:background="@drawable/rounded_rectangle"
        android:gravity="center"
        android:text="Descubrir"
        android:textColor="#D4812A"
        android:textSize="16sp"
        android:fontFamily="@font/baloo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.825"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96" />

</androidx.constraintlayout.widget.ConstraintLayout>
