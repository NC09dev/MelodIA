<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7BEEAF"
    tools:context=".MainActivity">

    <!-- Botón de volver -->

    <!-- Título -->

    <!-- Botón IDIOMA -->

    <!-- Botón VOLUMEN -->

    <!-- Imagen inferior (engranajes) -->

    <TextView
        android:id="@+id/titleText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/bagelfont"
        android:shadowColor="#FFFB8E"
        android:shadowDx="15"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:text="MIS MELODÍAS"
        android:textColor="#F90370"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/exportarButton"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_marginBottom="460dp"
        android:background="#F49194"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:text="EXPORTAR"
        android:textColor="#FFDF8E"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/archivoButton"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_marginTop="48dp"
        android:background="#F5D225"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:text="ARCHIVOS"
        android:textColor="#D98737"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/exportarButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText2"
        app:layout_constraintVertical_bias="0.27" />

</androidx.constraintlayout.widget.ConstraintLayout>
