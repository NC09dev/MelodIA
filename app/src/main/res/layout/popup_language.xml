<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFE187"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_arrow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="Flecha izquierda"
            android:padding="8dp"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/language_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:background="#FFE187"
            android:fontFamily="@font/bagelfont"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/language2"
            android:textColor="#010542"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="Flecha derecha"
            android:padding="8dp"
            android:src="@drawable/ic_front_arrow" />
    </LinearLayout>

</LinearLayout>
